<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">New Date Place</h1>
        <div class="col-6 offset-3">
            <form action="/dateplaces" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="dateplace[title]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="dateplace[location]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Date Place Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="dateplace[price]" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="dateplace[description]"
                        required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-4">
                    <label for="image" class="form-label">Add Photos</label>
                    <input class="form-control" type="file" id="image" multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Date Place</button>
                </div>
            </form>
            <a href="/dateplaces">All Date Places</a>
        </div>
    </div>
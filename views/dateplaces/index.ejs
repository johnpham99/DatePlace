<% layout("layouts/boilerplate")%>
    <h1>All Date Places</h1>
    <div>
        <a href="/dateplaces/new">Add Date Place</a>
    </div>
    <ul>
        <% for (let dateplace of dateplaces) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= dateplace.images[0].url %> ">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= dateplace.title%>
                            </h5>
                            <p class="card-text">
                                <%= dateplace.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= dateplace.location%>
                                </small>
                            </p>
                            <a href="/dateplaces/<%= dateplace.id  %>" class="btn btn-primary">View <%= dateplace.title
                                    %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </ul>